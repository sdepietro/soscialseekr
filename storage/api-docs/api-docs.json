                                        "type": "string"
                                    },
                                    "last_name": {
                                        "type": "string"
                                    },
                                    "phone": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "first_name": "Sergio",
                                    "last_name": "De Pietro",
                                    "phone": "+5491150052081"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Lista la info del usuario logueado."
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        },
        "/v1/users/password": {
            "put": {
                "tags": [
                    "Usuarios"
                ],
                "summary": "Actualizar contraseña del usuario",
                "operationId": "a5e8982cc3307f7bf784307fd46dd552",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "old_password": {
                                        "type": "string"
                                    },
                                    "new_password": {
                                        "type": "string"
                                    },
                                    "re_password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "old_password": "123456",
                                    "new_password": "12345678",
                                    "new_password_confirmation": "12345678"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Actualizacion de password."
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        }
    },
    "components": {
