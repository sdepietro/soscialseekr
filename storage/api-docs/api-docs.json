                    },
                    "order_id": {
                        "type": "integer",
                        "example": 99
                    },
                    "age": {
                        "type": "string",
                        "example": "30",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2025-08-12T15:30:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "example": "2025-08-12T15:30:00Z"
                    }
                },
                "type": "object"
            },
            "OrderResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 99
                    },
                    "origin_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "destination_id": {
                        "type": "integer",
                        "example": 4
                    },
                    "place_id": {
                        "type": "integer",
                        "example": 12
                    },
                    "travel_start_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-09-10"
                    },
                    "travel_end_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-09-18"
                    },
                    "whatsapp": {
                        "type": "string",
                        "example": "+5491122334455",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "example": "2025-08-12T15:30:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "example": "2025-08-12T15:30:00Z"
                    },
                    "passengers": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/OrderPassengerResource"
                        }
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "apiAuth": {
                "type": "apiKey",
                "description": "Para obtener este token hay que hacer login con usuario y contraseña. Y se agregará una cabezcera AuthorizationJWT: Bearer xxxxxx.yyyyyy.zzzzzzzzzz. NO OLVIDARSE DE AGREGAR EL bearer a mano.",
                "name": "Authorizationjwt",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
